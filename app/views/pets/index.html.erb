<body>
<div class="container">
  <h1>Pets</h1>
</div>

<div class="container-grid">
  <% @pets.each do |pet| %>
    <%# <div class="row"> %>
      <div class="card card-grid col-sm-4 col-m-6">
        <%= image_tag('macaw.jpg', draggable: "true", class: "card-img-top") %>
        <div class="card-body">
          <h5 class="card-title"><%=pet.name.capitalize%></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= pet.species.name.capitalize %></h6>
          <p class="card-text"><%= pet.age %> years old</p>
          <%= link_to "Find out more", pet, class: "btn btn-primary"%>
        </div>
      </div>
    <%# </div> %>
  <% end %>
</div>

