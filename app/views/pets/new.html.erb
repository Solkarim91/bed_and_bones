<div class="centered col-6 m-auto">
  <h1 class="center-text mt-4">New pet</h1>

<%= simple_form_for @pet do |f| %>
  <%= f.input :name, label: 'Pet name' %>
  <%= f.input :age, label: 'Pet age'%>
  <%= f.input :address,
              input_html: { data: { geocoder_target: "address" }, class: "d-none" },
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
  <%= f.input :price, label: 'Price per day'%>
  <%= f.association :species, label: 'Species'%>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, class: "custom-btn blue" %>
  <%= link_to 'Cancel', my_pets_path, class: "custom-btn orange" %>
<% end %>

</div>
