<h1>My Bookings</h1>


<div class="container-bookings-grid">
  <% @bookings.each do |booking| %>
    <div class="card-booking col-8">
      <%= image_tag('macaw.jpg') %>
      <div class="card-booking-infos">
        <h3><%= booking.pet.name %></h3>
        <h5><%= booking.pet.species.name.capitalize %></h5>
        <p>From: <%= booking.start_date %></p>
        <p>To: <%= booking.end_date %></p>
      </div>
      <p><%= link_to 'Cancel booking', booking_path(booking), method: :delete %></p>
    </div>
  <% end %>
</div>




