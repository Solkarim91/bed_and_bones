<div class="center center-text">
  <h1>Booking Confirmed:</h1>

  <div class="card col-6 center-card m-auto">
     <%= link_to @booking.pet, class: "link" do %>
         <% if @booking.pet.photo.attached? %>
          <%= cl_image_tag @booking.pet.photo.key, class: "card-img-top", height: 300, width: 400, crop: :fill%>
        <%else   %>
          <%= image_tag('macaw.jpg', draggable: "true", class: "card-img-top") %>
        <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= @booking.pet.name %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= @booking.pet.species.name.capitalize %></h6>
      <p class="card-text">From: <%= @booking.start_date %></p>
      <p class="card-text">To: <%= @booking.end_date %></p>
    </div>
    <div class="card-body price">
      <h6>Â£<%= @booking.pet.price %> / day</h6>
    </div>
    <% end %>
  </div>
  <%= link_to 'View My Bookings', my_bookings_path %>
</div>
